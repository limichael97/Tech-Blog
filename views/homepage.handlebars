<ol class="postList">
  {{#each posts as |post|}}
  <li>
    <article class="card post">
      <div class="card-header">
        <p class="card-header-title">
          {{post.title}}

        </p>
      </div>
      <div class="meta">
        by {{post.user.username}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>